<h1>The Big Bang-Shang-A-Lang Fireworks Company</h1>

<h2>Inventory</h2>

<table class='table'>
  <thead>
    <tr>
		<th>ID</th>
		<th>SKU</th>
		<th>Description</th>
		<th>On Order</th>
		<th>In Stock</th>
		<th>Cost</th>
		<th>Total Cost</th>
		<th>Price</th>
		<th>Total Price</th>

	</tr>

  </thead>

  <tbody>
	  <% items.forEach(function(el,index)
	  { %>
	    <tr class="<%= el.evenClass%>">
	      <td><%= el.id %></td>
		  <td><%= el.sku %></td>
		  <td><%= el.description%></td>
		  <td><%= el.onorder%></td>
		  <td><%= el.instock%></td>
		  <td><%= el.cost%></td>
		  <td><%= el.totalcost%></td>
		  <td><%= el.price%></td>
		  <td><%= el.totalprice%></td>

		  <td><a href="#" class="editItem"   itemID="<%= el.id%>" >Edit</a></td>
		  <td><a href="#" class="deleteItem" itemID="<%= el.id%>" >Delete</a></td>
		  <td><a href="#" class="findStore"  itemID="<%= el.id%>" >Find Store</a></td>

	    </tr>

   <% });  %>

  </tbody>

</table>

<style>

	table tr.even { background: #ccccff; }

</style>
